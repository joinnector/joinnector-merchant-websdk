{
	"name": "joinnector-merchant-client-sdk",
	"version": "1.0.0",
	"description": "Merchant client webview SDK (nector.io is a B2B SaaS loyalty platform that allows the business to target a wider audience and increase customer engagement by rewarding them.)",
	"keywords": [
		"nector",
		"reward",
		"loyalty",
		"coins",
		"wallets",
		"deals"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/joinnector/joinnector-merchant-client-sdk.git"
	},
	"author": {
		"name": "Nector, Tech",
		"email": "tech@nector.io"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn run js:lint && yarn run test",
			"pre-push": "yarn run js:lint:fix && yarn run test"
		}
	},
	"scripts": {
		"build": "craco build",
		"dev": "craco start",
		"prod": "babel-node ./app.js --presets es2015,stage-2",
		"deploy-staging": "NODE_ENV=staging yarn run build && wrangler publish --env staging",
		"deploy-pre": "NODE_ENV=production yarn run build && wrangler publish --env pre",
		"deploy-production": "NODE_ENV=production yarn run build && wrangler publish --env production",
		"js:lint": "eslint . --ext .js",
		"js:lint:fix": "eslint . --ext .js --fix"
	},
	"dependencies": {
		"@ant-design/icons": "^4.2.2",
		"@craco/craco": "^6.1.1",
		"antd": "^4.13.0",
		"async": "^3.2.0",
		"axios": "^0.21.1",
		"bignumber.js": "^9.0.1",
		"copy-to-clipboard": "^3.3.1",
		"craco-less": "^1.17.1",
		"crypto": "^1.0.1",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"form-data": "^3.0.0",
		"framer-motion": "^4.1.2",
		"lodash": "^4.17.20",
		"moment": "^2.24.0",
		"prop-types": "^15.7.2",
		"querystring": "^0.2.0",
		"random-gradient": "^0.0.2",
		"randomcolor": "^0.6.2",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-icons": "^4.2.0",
		"react-linkify": "^1.0.0-alpha",
		"react-pull-to-refresh": "^1.1.2",
		"react-redux": "7.1",
		"react-ripples": "^2.2.1",
		"react-router-dom": "5.2.0",
		"react-scripts": "^4.0.3",
		"react-sizeme": "^3.0.1",
		"react-stack-grid": "^0.7.1",
		"redux": "4.0.5",
		"redux-immutable-state-invariant": "^2.1.0",
		"redux-logger": "^3.0.6",
		"redux-promise": "^0.6.0",
		"redux-thunk": "^2.3.0",
		"string-template": "^1.0.0",
		"uuid": "^8.3.1",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"babel-cli": "^6.11.4",
		"babel-preset-es2015": "^6.9.0",
		"babel-preset-stage-2": "^6.11.0",
		"babel-register": "^6.11.6",
		"eslint": "^7.11.0",
		"eslint-plugin-react": "^7.21.0",
		"husky": "^4.3.0",
		"pm2": "^4.4.1"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
